{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "managers": ["dockerfile"],
      "enabled": true,
      "schedule": ["at any time"]
    },
    {
      "managers": ["pip_requirements"],
      "enabled": true,
      "schedule": ["at any time"]
    },
    {
      "managers": ["docker-compose"],
      "enabled": true,
      "schedule": ["at any time"]
    },
    {
      "managers": ["python"],
      "enabled": true,
      "schedule": ["at any time"]
    }
  ],
  "pip_requirements": {
    "enabled": true,
    "fileMatch": ["(^|/)requirements\\.txt$"]
  },
  "dockerfile": {
    "enabled": true,
    "fileMatch": ["(^|/)Dockerfile$"]
  },
  "docker-compose": {
    "enabled": true,
    "fileMatch": ["(^|/)docker-compose\\.ya?ml$"]
  }
}