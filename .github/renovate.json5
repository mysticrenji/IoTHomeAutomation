{
  "extends": [
    "config:base"
  ],
  "automerge": true,  // Disable automerging by default
  "automergeType": "pr",  // Use PR automerging when enabled
  "dependencyDashboard": true,  // Enable dependency dashboard
  "labels": ["dependencies"],  // Default labels for PRs
  "prConcurrentLimit": 5,  // Limit the number of concurrent PRs
  "prHourlyLimit": 5,  // Limit the number of PRs created per hour
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],  // Apply to all packages
      "groupName": "all dependencies",  // Group all dependencies into a single PR
      "schedule": ["at any time"]  // Allow updates at any time
    }
  ],
  "docker": {
    "fileMatch": ["(^|/)Dockerfile$"]
  },
  "pip_requirements": {
    "fileMatch": ["(^|/)requirements\\.txt$"]
  },
  "docker-compose": {
    "fileMatch": ["(^|/)docker-compose\\.ya?ml$"]
  },
  "postUpgradeTasks": {
    "commands": [
      "pip install -r requirements.txt",  // Run this command after upgrading Python dependencies
      "docker-compose build"  // Rebuild Docker images after upgrading dependencies
    ],
    "fileFilters": ["requirements.txt", "docker-compose.yml"]
  }
}
